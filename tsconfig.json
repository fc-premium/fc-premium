{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "es2019"],
		"outDir": "./out",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": false,
		"removeComments": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"watch": true,
		"incremental": false,

		"typeRoots": [
			"./node_modules/@types"
			"./types/"
		]	
	},

	"files": [
		"./src/init.ts"
	]
}
